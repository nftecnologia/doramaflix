# DoramaFlix Railway Deployment - No Prisma Fallback
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install basic dependencies (no Prisma)
RUN npm init -y
RUN npm install express cors bcrypt jsonwebtoken multer @vercel/blob --save

# Copy backend server files
COPY backend/server-no-prisma.js ./server.js

# Expose port
EXPOSE $PORT

# Start the application
CMD ["node", "server.js"]