# ==========================================
# DORAMAFLIX MIGRATION SCRIPT CONFIGURATION
# ==========================================

# ==========================================
# VERCEL BLOB STORAGE (SOURCE)
# ==========================================
# Token com permissões de leitura/escrita para Vercel Blob
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_token_here

# ==========================================
# DIGITALOCEAN SPACES (DESTINATION)
# ==========================================
# Credenciais do DigitalOcean Spaces (S3-compatible)
DO_SPACES_ACCESS_KEY=your_do_spaces_access_key
DO_SPACES_SECRET_KEY=your_do_spaces_secret_key
DO_SPACES_BUCKET=doramaflix-storage
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3

# CDN URL (opcional, melhora performance de entrega)
DO_SPACES_CDN_URL=https://cdn.yourdomain.com

# ==========================================
# DATABASE CONNECTION
# ==========================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/doramaflix

# Ou configuração individual
DB_HOST=localhost
DB_PORT=5432
DB_NAME=doramaflix
DB_USER=postgres
DB_PASSWORD=your_password

# ==========================================
# MIGRATION SCRIPT CONFIGURATION
# ==========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Node environment
NODE_ENV=production

# ==========================================
# OPTIONAL: STORAGE FALLBACK CONFIGS
# ==========================================
# Se você também usa outros provedores de storage

# AWS S3 (se aplicável)
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY=your_aws_access_key
AWS_S3_SECRET_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-s3-bucket

# Cloudflare R2 (se aplicável)
CLOUDFLARE_R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY=your_r2_access_key
CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_key
CLOUDFLARE_R2_BUCKET=your-r2-bucket
CLOUDFLARE_R2_PUBLIC_URL=https://your-r2-public-url.com

# ==========================================
# MONITORING & OBSERVABILITY (OPTIONAL)
# ==========================================
# Para logs avançados e monitoramento

# Sentry (para tracking de erros)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Datadog (para métricas)
DATADOG_API_KEY=your_datadog_api_key

# Logtail (para centralização de logs)
LOGTAIL_TOKEN=your_logtail_token

# Server identification
SERVER_NAME=migration-server-01

# ==========================================
# SECURITY & PERFORMANCE
# ==========================================
# JWT secrets (se o script precisar acessar APIs autenticadas)
JWT_SECRET=your_super_secret_jwt_key_32_chars_min
JWT_REFRESH_SECRET=your_refresh_secret_32_chars_min

# Bcrypt rounds (para eventuais operações de hash)
BCRYPT_SALT_ROUNDS=12

# Rate limiting (para APIs)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# NOTIFICATIONS (OPTIONAL)
# ==========================================
# Para notificações sobre o progresso da migração

# SMTP para emails de notificação
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@doramaflix.com

# Slack webhook para notificações
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ==========================================
# PAYMENT GATEWAYS (SE NECESSÁRIO)
# ==========================================
# Apenas se o script precisar validar subscriptions

# Stripe
STRIPE_SECRET_KEY=sk_live_or_test_key
STRIPE_PUBLISHABLE_KEY=pk_live_or_test_key
STRIPE_WEBHOOK_SECRET=whsec_webhook_secret

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=your_mp_access_token
MERCADOPAGO_PUBLIC_KEY=your_mp_public_key

# ==========================================
# DEVELOPMENT & TESTING
# ==========================================
# Para ambiente de desenvolvimento

# Development mode
DEVELOPMENT_MODE=false

# Enable API docs
ENABLE_API_DOCS=false

# CORS settings
ENABLE_CORS=true
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# ==========================================
# REDIS (SE NECESSÁRIO PARA CACHE)
# ==========================================
# Para cache durante migração

REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ==========================================
# MESSAGE QUEUE (SE NECESSÁRIO)
# ==========================================
# Para processamento assíncrono

RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
# Para backup automático antes da migração

BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=doramaflix-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key