# DoramaFlix - Environment Variables Template
# Copy this file and rename to .env, then fill in the values

# ======================
# GENERAL CONFIG
# ======================
NODE_ENV=production
ENVIRONMENT=production
TZ=America/New_York

# ======================
# DATABASE
# ======================
# These will be automatically set by DigitalOcean App Platform
# DATABASE_URL=postgresql://user:password@host:port/database
# DB_HOST=
# DB_PORT=5432
# DB_NAME=
# DB_USER=
# DB_PASSWORD=

# ======================
# AUTHENTICATION & SECURITY
# ======================
# Generate strong random keys for these
NEXTAUTH_SECRET=your-nextauth-secret-key-here-min-32-chars
JWT_SECRET=your-jwt-secret-key-here-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here-min-32-chars
ENCRYPTION_KEY=your-encryption-key-here-min-32-chars
SESSION_SECRET=your-session-secret-key-here-min-32-chars
API_KEY=your-api-key-here
WEBHOOK_SECRET=your-webhook-secret-here

# JWT Configuration
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password Hashing
BCRYPT_ROUNDS=12

# ======================
# FRONTEND CONFIG
# ======================
NEXT_PUBLIC_API_URL=${APP_URL}/api
NEXT_PUBLIC_APP_URL=${APP_URL}
NEXT_PUBLIC_ENVIRONMENT=production

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Storage
NEXT_PUBLIC_STORAGE_PROVIDER=digitalocean
NEXT_PUBLIC_CDN_URL=https://your-cdn-url.com

# ======================
# EMAIL CONFIGURATION
# ======================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user@your-domain.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@doramaflix.com

# ======================
# DIGITALOCEAN SPACES
# ======================
DO_SPACES_KEY=your-do-spaces-access-key
DO_SPACES_SECRET=your-do-spaces-secret-key
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=doramaflix-storage
DO_SPACES_REGION=nyc3

# ======================
# CDN CONFIGURATION
# ======================
CDN_URL=https://your-cdn-url.com
CDN_ENABLED=true

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_URL=redis://your-redis-host:6379
QUEUE_REDIS_URL=redis://your-redis-host:6379

# ======================
# VIDEO PROCESSING
# ======================
FFMPEG_PATH=/usr/bin/ffmpeg
ENABLE_VIDEO_PROCESSING=true
MAX_FILE_SIZE=2147483648
MAX_CONCURRENT_JOBS=2

# ======================
# PAYMENT PROCESSING
# ======================
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ======================
# SOCIAL AUTHENTICATION
# ======================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# ======================
# EXTERNAL APIS
# ======================
# The Movie Database
TMDB_API_KEY=your-tmdb-api-key

# YouTube Data API
YOUTUBE_API_KEY=your-youtube-api-key

# ======================
# MONITORING & LOGGING
# ======================
# Sentry
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN=https://your-backend-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=doramaflix-frontend
SENTRY_ENVIRONMENT=production

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# CORS CONFIGURATION
# ======================
CORS_ORIGIN=${APP_URL}
CORS_CREDENTIALS=true

# ======================
# SESSION CONFIGURATION
# ======================
SESSION_MAX_AGE=86400000

# ======================
# SECURITY
# ======================
ENABLE_HTTPS_REDIRECT=true
ENABLE_HELMET=true

# ======================
# FEATURES
# ======================
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_QUEUE_PROCESSING=true

# ======================
# ADMIN CONFIGURATION
# ======================
ADMIN_EMAIL=admin@doramaflix.com
ADMIN_PASSWORD=your-secure-admin-password

# ======================
# BACKUP CONFIGURATION
# ======================
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=30

# ======================
# WORKER CONFIGURATION
# ======================
WORKER_TYPE=video-processor

# ======================
# HOW TO GENERATE SECURE KEYS
# ======================
# Use these commands to generate secure random keys:
#
# For 32-character keys:
# openssl rand -base64 32
#
# For 64-character keys:
# openssl rand -base64 48
#
# For UUID-like keys:
# uuidgen
#
# Example secure key generation:
# NEXTAUTH_SECRET=$(openssl rand -base64 32)
# JWT_SECRET=$(openssl rand -base64 32)
# ENCRYPTION_KEY=$(openssl rand -base64 32)